{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "webdriverio", "@wdio/globals/types", "mocha"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["**/*.ts", "../../wdio.conf.ts"],
  "exclude": ["node_modules"]
}
